! Mac keyboard configuration
! 63 and 71 are left and right command keys
! 66 and 69 are left and right option keys

! Use option key as meta
!keycode 66 = Meta_L
!keycode 69 = Meta_R
!keycode 63 = Mode_switch
!keycode 71 = Mode_switch

! Use command key as meta
keycode 63 = Meta_L
keycode 71 = Meta_R
keycode 66 = Mode_switch
keycode 69 = Mode_switch

clear mod1
clear mod2

add mod1 = Meta_L Meta_R
add mod2 = Mode_switch
